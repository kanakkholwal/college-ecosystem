{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true // disable for Docker deployment for lighter image
  },
  "include": [
    "src/**/*",
    "package.json",
    "tsconfig.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}